<%# 広告登録/編集フォーム %>
<%= form_with model:@advertisement, local: true do |f| %>
  <div class="field">
    <%= f.label :title, "広告タイトル", class: "regiAdvertisement__item col-6" %>
    <%= f.text_field :title, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :start_on, "掲載開始日", class: "regiAdvertisement__item col-6" %>
    <%= f.date_field :start_on, id: "start_on" %>
  </div>
  <div class="field">
    <%= f.label :end_on, "掲載終了日", class: "regiAdvertisement__item col-6" %>
    <%= f.date_field :end_on, id: "end_on" %>
  </div>
  <div class="field">
    <%= f.label :banner_image, "バナー広告画像", class: "regiAdvertisement__item col-6" %>
    <%= f.file_field :banner_image %>
  </div>
  <div class="field">
    <%= f.label :banner_url, "バナー広告URL", class: "regiAdvertisement__item col-6" %>
    <%= f.text_field :banner_url, placeholder: "http://sample.com" %>
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
<%= link_to "マイページへ戻る", :back, class: "back" %>