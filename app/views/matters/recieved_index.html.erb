<%# 受注済案件一覧 %>
<div class="MyPage">
  <div class="container">
    <div class="ProfileBox">
      <div class="matters">
        <h3 class="matters__title">受注済案件一覧</h3>
        <% if @matters %>
          <table class="table table-striped">
            <thead>
              <tr class="matter">
                <th class="matter__title" scope="col">案件タイトル</th>
                <th class="matter__createdAt" scope="col">受注日</th>
                <th class="matter__updateAt" scope="col">案件詳細</th>
                <th scope="matter__delete btn" scope="col">辞退</th>
              </tr>
            </thead>
            <tbody>
            <% @matters.each do |m| %>
              <tr class="matterDetails">
                <th class="matterDetails__title matterDetails__common" scope="row"><%= m.title %></th>
                <td class="matterDetails__createdAt matterDetails__common"><%= l m.order_date, format: :md %></td>
                <td class="matterDetails__updatedAt matterDetails__common"><%= link_to '案件詳細', "#", class: "btn" %></td>
                <td><%= link_to '辞退する', decline_matter_path(m.id), method: :patch, data: { confirm: '辞退して宜しいですか？' }, class: 'matterDetails__delete btn' %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% else %>
          <h2 class="ProfileBox__subtitle">受注した案件はありません。</h2>
          <div class="Edit__client"><%= link_to "案件を受注する", "#", class: "btn fa fa-edit" %></div>
        <% end %>
        <%= link_to "マイページへ戻る", user_path(current_user.id), class: "back" %>
      </div>
    </div>
  </div>
</div>